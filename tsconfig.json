{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(app-dashboard)/adminX/layout.tsxX",
    "src/app/layout.tsxX",
    "src/app/ClientLayout.tsxX",
    "src/app/(root)/layout.tsxX",
    "src/app/(app-dashboard)/user/layout.tsx",
    "src/components/DashboardSidebar.tsxX",
    "src/app/(app-dashboard)/layout.tsxX",
    "src/components/dashboard/dashboard-sidebar.tsxX",
    "src/components/SessionChecker.tsxX",
    "src/app/(app-dashboard)/admin/layout.tsx",
    "src/actions/auth/register-with-verifications.tsxX",
    "src/components/auth/RegisterFormWithVerificationX.tsxX",
    "src/components/auth/EmailVerificationStatusX.tsxX",
    "src/components/auth/EmailVerification.XtsxX"
  ],
  "exclude": ["node_modules"]
}
